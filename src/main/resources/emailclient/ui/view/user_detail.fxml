<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="emailclient.controller.UserDetailController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Деталі користувача" style="-fx-font-size: 18px;"/>

    <TextField fx:id="nameField" promptText="Ім'я користувача"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Пароль"/>

    <HBox spacing="10">
        <Button text="Редагувати" onAction="#handleEditUser"/>
        <Button text="Видалити" onAction="#handleDeleteUser"/>
        <Button text="Назад" onAction="#handleBack"/>
    </HBox>
</VBox>
